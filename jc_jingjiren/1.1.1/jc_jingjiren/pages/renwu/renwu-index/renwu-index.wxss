.page{
  padding: 0px 20rpx;
  background: rgba(255, 255, 255, 1);
  padding-bottom: 20rpx;
}
swiper{
  height:360rpx;
  width: 710rpx;
  border-radius: 30rpx;
  overflow: hidden;
  z-index: -1
}
.slide-image{
  width: 710rpx;
  height: 360rpx;
  border-radius: 30rpx;
  /* border: 1px solid rgb(230, 48, 48); */
}

.w-title-border{
  width: 355rpx;
  margin: auto;
  border-top: 1px solid #AAAAAA;
  margin-top: 48rpx;
  text-align: center
}
.w-title-text{
  position: relative;
  top: -20rpx;
  font-size: 36rpx;
  background: white;
  width: auto;
  padding: 0 8rpx;
  /* border: 1px solid black */
}
.w-desc{
  text-align: center;
  font-size: 24rpx;
  color: #838383;
}

/* body部分 */
.w-project{
  width: 750rpx;
  height: 180rpx;
  margin-left: -20rpx;
  margin-right: -20rpx;
}
.w-project-item{
  text-align: center;

}
.project-item-icon{
  margin: auto;
  margin-top: 48rpx;
}
.project-item-icon image{
  height: 56rpx;
  width: 56rpx;
  border-radius: 6rpx;
}
.project-item-title{
  font-size:24rpx;
  margin-top: 10rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.w-gonggao{
  margin-top: 30rpx;
  width:700rpx;
  height:50rpx;
  background:rgba(245,244,247,1);
  border-radius:22rpx;
  line-height: 50rpx;
}
.gonggao-placeholder{
  font-size: 22rpx;  
  color: #C34343;
  margin:0 10rpx 0 26rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.w-gonggao-icon{
  vertical-align: middle;
  line-height: 100%;
}
.icon-gonggao{
  color: #C34343;
  top: -10rpx;
}
.more-placeholder{
  font-size: 22rpx;
  color: #010101;
  margin: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.placeholder-text{
  font-size: 20rpx;
  color: #494949;
  padding: 0 10rpx;

  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.w-gonggao-item{
  color:#494949;
  padding: 0 10rpx;

  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;

  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
}


.w-gonggao-line{
  width: 3rpx;
  height: 36rpx;
  margin-top: 7rpx;
  background:rgb(167, 167, 167);
  margin:7rpx 30rpx 0rpx 30rpx;
}
/* 热门活动 */
.w-activity{
  width: 100%;
  height: 256rpx;
  /* border: 1px solid black; */
}
.w-activity-left{
  background: #F4FAF5;
  margin-right: 10rpx;
  padding: 34rpx 30rpx;
}
.w-activity-r-top{
  background: #FEEFEC;
  height: 123rpx;
}
.w-activity-r-bottom{
 height: 123rpx;
  margin-top: 10rpx;
  background: #F8F9FE
}
.w-activity-h1{
  font-size:48rpx;
  font-weight:500;
  color:rgba(88,166,92,1);
}
.w-activity-h1-desc{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(88,166,92,1);
  opacity:0.61;
  margin-top: 20rpx;
}
/* 专题项目 */
.w-subject{
  width: 730rpx;
  margin-top: 30rpx;
  margin-right: -20rpx;
  /* border: 1px solid black; */
  /* height: 100rpx; */
}
.scroll-view_H{
  width: 100%;
  white-space: nowrap;
}
.w-subject-item{
  width: 280rpx;
  /* height: 300rpx; */
  display: inline-block;
  /* border: 1px solid black; */
  margin-right: 20rpx;
}
.subject-item-top{
  width: 284rpx;
  height: 194rpx;
  border-radius: 20rpx;
  overflow: hidden;
  /* border: 1px solid black; */
  position: relative;
}
.subject-item-top .placeholder{
  width: 100%;
  height: 100%;
}
.subject-item-top .placeholder image{
  width: 100%;
  height: 100%;
}
.subject-item-top .placeholder view{
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 37rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
}
.subject-item-bottom .placeholder{
  /* height: 150rpx; */
  padding: 0 6rpx;
}
.subject-item-bottom-title{
  color: #3A3A3A;
  font-size: 24rpx;
  margin-top: 6rpx;
}
.subject-item-bottom-desc{
  font-size: 16rpx;
  color: #7C7C7C;
  display: -webkit-box;
  line-height: 28rpx;
  height: 28rpx;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.subject-item-bottom-info{
  font-size: 18rpx;
  color: #FF6600;
  
}
.subject-item-bottom-info view{
  float: left;
  width: 50%;
  line-height: 28rpx;
  height: 28rpx;
}
/* 列表 */
.list-item{
  margin: 30rpx auto;
}
.item-left{
  width: 284rpx;
  height: 194rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.item-left image{
  width: 100%;
  height: 100%;
}
.item-left .placeholder{
  height: 100%;
  width: 100%;
  position: relative;
}
.item-left .placeholder view{
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 37rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
}
.item-right{
  padding-left: 39rpx;
}
.item-right .placeholder{
  height: 100%;
}
.item-title{
  color: #3A3A3A;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.item-desc{
  font-size: 26rpx;
  color: #7C7C7C;
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
  margin-top: 10rpx;
}
.item-info{
  font-size: 22rpx;
  color: #FF6600;
  margin-top: 8rpx;
}
.item-info view{
  float: left;
  width: 50%;
}
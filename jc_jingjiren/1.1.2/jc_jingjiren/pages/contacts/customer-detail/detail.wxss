/* pages/workbench/customer/customer-detail/detail.wxss */
.wrapper-header{
  width:710rpx;
  margin: auto;
  height:320rpx;
  background:rgba(255,255,255,1);
  box-shadow:2px 1px 7px 0px rgba(4,0,0,0.09);
  border-radius:40rpx;
  padding: 10rpx 20rpx;
}
.info-item{
  margin-top: 25rpx;
}
.info-desc{
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.item-left{
  width: 160rpx;
  /* border: 1px solid black; */
  text-align: center;
}
.item-right{
  /* border: 1px solid black;  */
  display: flex;  
  align-items: center;  
}
/* 中间 */
.wrapper-body-title{
  text-align: center;
  padding:20rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-top: 20rpx;
}
/* 列表相关 */
.w-card{
  border-top: 20rpx solid rgba(249,248,248,1);
}
.w-card-head{
  padding: 20rpx 30rpx;
}
.w-card-head image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
}
.w-card-body{
  width:750rpx;
  background:rgba(249,248,248,1);
  padding: 20rpx 30rpx;
}
.w-card-bodys{
  width:750rpx;
  background:rgb(255, 255, 255);
  padding: 20rpx 30rpx;
}

.w-card-body image{
  width:169rpx;
  height:170rpx;
  border-radius:10rpx; 
}
.card-body-left{
  width: 220rpx;
}
.card-body-right{
  padding: 10rpx 20rpx;
}
.item-title{
  font-size:32rpx;
  font-weight:500;
  color:rgba(38,38,38,1);

}
.item-desc{
  font-size:24rpx;
  font-weight:400;
  color:rgba(67,66,64,1);
  margin-top: 20rpx;
}
.item-process{
  font-size:24rpx;
  font-weight:400;
  color:rgba(67,66,64,1);
  margin-top: 10rpx;
}
.w-card-foot{
  text-align: right;
  border: 1px solid balck;
  /* height: 60rpx; */
  padding: 10rpx 30rpx;
}
.foot-l{
  display: flex;  
  align-items: center;  
  font-size: 24rpx;
  color: #434240;
}
.w-card-foot button{
  background: #FFFFFF;
  border:1px solid rgba(210,210,210,1);
  border-radius:20rpx;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.colorGreen{
  color: #67C23A
}
.colorOrange{
  color: #DE601B
}
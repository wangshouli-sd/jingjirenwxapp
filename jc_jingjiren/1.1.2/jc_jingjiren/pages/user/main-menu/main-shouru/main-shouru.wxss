/* pages/user/main-shouru/main-shouru.wxss */
.page-head{
  height: 460rpx;
  background-repeat: no-repeat;
  /* background-origin: center center; */
  background-size: cover;
  background-position: center center;
  border-top: 1rpx solid rgba(255, 255, 255, 0);
  box-shadow:0px 2px 20rpx 0rpx #D4D4D4;
  position: relative;
}
.page-head-backimg{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.headimg_box{
  width: 120rpx;
  height: 120rpx;
  margin:100rpx  auto 0 auto;
  border-radius: 50%;
  overflow: hidden;
  border: 5rpx solid #e7e7e7;
  box-shadow: 4rpx 8rpx 20rpx 0rpx #75bad7;
}
.headimg_box image{
  width: 100%;
  height: 100%;
}
.head_name{
  color: #282828;
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}
.head_id{
  color: #282828;
  font-size: 30rpx;
  margin-top: 14rpx;
  text-align: center;
}

/* body */
.page-body{
  padding: 90rpx 30rpx 50rpx 30rpx ;
}
.grid_box{
  /* border: 1px solid black; */
  min-height: 300rpx;
  position: relative;
}
.grid_box-item{
  width: 50%;
  display: inline-block;
  /* border: 1px solid red; */
  margin: 0rpx;
  padding: 20rpx 20rpx 50rpx 20rpx;
}
.line-ver{
  position: absolute;
  background: #e7e7e7;
  width: 2rpx;
  height: 90%;
  top: 5%;
  left: 50%;
}
.line-hor{
  position: absolute;
  background: #e7e7e7;
  height: 2rpx;
  width: 80%;
  top: 50%;
  left: 10%;
}
.item-icon-box{
  /* border: 1px solid black; */
  text-align: center;
  margin-top: 50rpx;
  
}
.item-icon-box .iconfont{
  font-size: 45rpx;
  color: #FE9D32;
 
}
.grid_box .grid_box-item:nth-child(1) .item-icon-box .iconfont{
  text-shadow: 2rpx 2rpx 12rpx #FE9D32;
}
.grid_box .grid_box-item:nth-child(2) .item-icon-box .iconfont{
  text-shadow: 2rpx 2rpx 12rpx #65BBFA; 
}
.grid_box .grid_box-item:nth-child(3) .item-icon-box .iconfont{
  text-shadow: 2rpx 2rpx 12rpx #E51702; 
}
.grid_box .grid_box-item:nth-child(4) .item-icon-box .iconfont{
  text-shadow: 2rpx 2rpx 12rpx #EFE149;
}
.item-title{
  text-align: center;
  margin-top: 30rpx;
}
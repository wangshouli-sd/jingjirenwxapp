/* 间隔线 */

.w-interval {
  height: 40rpx;
  background: #f0eff5;
}

/* 选择框 选中样式 wui */

.w-type-item-radio {
  border: 1px solid #b5b5b5;
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  padding: 6rpx;
}

.w-type-item-radio view {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #b5b5b5;
}

/* 去除btn重复边框 */

button::after {
  border: none;
}


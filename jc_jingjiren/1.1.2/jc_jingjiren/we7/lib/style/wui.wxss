/* 首页通用标题 */

.w-tab-title {
  position: relative;
  padding: 12px 15px;
  background: #fff;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  overflow: hidden;
  /* border: 1px solid black; */
  width: 750rpx;
  margin-left: -20rpx;
  margin-right: -20rpx;
  height: 100rpx;
  margin-top: 20rpx;
}

.w-tab-title-left {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: bold;
}

.w-tab-title-desc {
  font-size: 20rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(127, 127, 127, 1);
  margin-top: 0rpx;
}

.w-tab-title-right {

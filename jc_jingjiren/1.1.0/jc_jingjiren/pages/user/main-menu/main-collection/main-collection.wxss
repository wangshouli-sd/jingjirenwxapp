/* pages/user/main-menu/main-collection/main-collection.wxss */

.page{
  padding: 0rpx;
  border-top: 1px solid #d2d2d2;
}
.iconfont{
  top: -8rpx;
}
.collection-list-item{
 
  border-bottom: 1px solid #d2d2d2;
  padding:50rpx 20rpx 33rpx 20rpx;
}
.item-left .image-box{
  width: 168rpx;
  height: 146rpx;
  /* border: 1px solid black; */
  border-radius: 20rpx;
  margin-right: 35rpx;
}
.item-left .image-box image{
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}


.w-item-title{
  font-size: 30rpx;
  color: #3E3E3E;
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.w-item-commis{
  font-size: 26rpx;
  margin-top: 16rpx;
  color: #7E7E7E;
}
.w-item-commis text{
  color: #c2445f;
}
.w-item-label{
  margin-top: 16rpx;
}
.w-item-label text{
  padding: 5rpx 14rpx;
  font-size: 20rpx;
  color: #3677CB;
  background: #edf5fc;
  margin-right: 30rpx;
}
.item-center{
}
.item-right{
  width: 50rpx;
  line-height: 160rpx;
}

.cancel-collect{
  padding:32rpx 20rpx 15rpx 20rpx;
}
.cancel-collect icon{
  color: #FA8232;
}
.cancel-collect text{
  font-size: 24rpx;
  color: #3A3939;
  margin-left: 14rpx;
}
.cancel-collect view{
  /* border: 1px solid black; */
  display: inline-block;
}
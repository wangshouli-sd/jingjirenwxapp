}

/* 底部提交按钮 */
.w-btn-box{
  padding: 20rpx;
}
.w-btn-box view{
  padding: 20rpx;
}
.w-btn-box view button{
  width: 306rpx;
  height: 67rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.w-btn-box view:nth-child(1) button{
  color: #52A1FD;
  border: 1px solid #52A1FD;
  background: white;
}
.w-btn-box view:nth-child(2) button{
  color:white;
  background:#52A1FD;
}
.w-btn-box view button .iconfont{
  margin-left: 0rpx;
  margin-right: 6rpx;
  top: -22rpx;
  font-size: 36rpx;
}
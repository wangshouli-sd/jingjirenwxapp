/* pages/renwu/renwu-detail/renwu-detail.wxss */
/* head */
.page{
  padding: 0rpx;
  padding-bottom: 20rpx;
}
.w-banner{
  width: 100%;
  height: 330rpx;
}
.w-banner image{
  width: 100%;
  height: 100%;
}
.w-title{
  padding: 35rpx 20rpx 30rpx 20rpx;
}
.w-title-box{
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.w-icon-box icon{
  font-size: 40rpx;
}
.iconfont{
  width: 34rpx;
  height: 34rpx;
  margin-left: 30rpx;
}

/* body */
.w-info {
  padding: 30rpx 20rpx 0rpx 20rpx;
  border-bottom: 1px solid #EEEEEE;
}

.w-info-title text{
  font-size: 26rpx;
  color: #323232;
  font-weight: bold;
  margin-left: 10rpx;
}
.w-info-title icon{
  color: #f68301;
  font-size: 36rpx;
  top: -14rpx;
}
.w-info-title text:nth-child(3){
  color:#B42525;
}
.w-info-content{margin-top: 20rpx;}
.w-info-content view{
  width: 50%;
  display: inline-block;
  margin-bottom: 16rpx;
}
.w-info-content view text{
  color: #6E6D6D;
  font-size: 22rpx;
}
.w-info-content view text:nth-child(1){
  display: inline-block;
  min-width: 50%;
  /* border: 1px solid black; */
}
.w-label-box{
  padding: 16rpx 20rpx 20rpx 20rpx;
}
.w-label-box text{
  padding: 5rpx 14rpx;
  font-size: 22rpx;
  color: #3677CB;
  background: #edf5fc;
  margin-right: 30rpx;
}




/* weui  tab重新定义 */


.weui-navbar__item{
  color: #323232;
  padding: 13px 0 0 0;
}
.weui-navbar__slider{
  background-color:#7AAFFF;
}
.weui-bar__item_on view{
  color: #7AAFFF;
}

/* w-intro */

.weui-tab__content{
  padding: 20rpx;
  padding-top: 60rpx;
}
/* 左侧介绍 */
.jieshao-image-box{
  width: 150rpx;
  height: 180rpx;
  border: 1px solid #52A1FD;
  position: relative;
  top: 20rpx;
}
.jieshao-image-box image{
  width: 100%;
  height: 100%;
  position: relative;
  top: 15rpx;
  left: 15rpx;
}
.jieshao-title{
  font-size: 28rpx;
  color: #1A1A1A;
  text-align: center;
  font-weight: bold;
}
.jieshao-desc{
  color:  #616262;
  font-size: 26rpx;
  margin-top: 20rpx;
  line-height: 50rpx;
}
/* 右侧流程 */
.w-content-liucheng{
 
  padding: 20rpx 70rpx 20rpx 120rpx;
  
}

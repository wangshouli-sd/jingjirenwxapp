.page{
  padding: 0px 20rpx;
  background: rgba(255, 255, 255, 1);
  padding-bottom: 20rpx;
}
swiper{
  height:360rpx;
  width: 710rpx;
  border-radius: 30rpx;
  overflow: hidden;
z-index: -1
}
.slide-image{
  width: 710rpx;
  height: 360rpx;
  border-radius: 30rpx;
  /* border: 1px solid rgb(230, 48, 48); */
}

.w-title-border{
  width: 355rpx;
  margin: auto;
  border-top: 1px solid #AAAAAA;
  margin-top: 48rpx;
  text-align: center
}
.w-title-text{
  position: relative;
  top: -20rpx;
  font-size: 36rpx;
  background: white;
  width: auto;
  padding: 0 8rpx;
  /* border: 1px solid black */
}
.w-desc{
  text-align: center;
  font-size: 24rpx;
  color: #838383;
}

/* body部分 */
.w-project{
  background-repeat: no-repeat;
  background-position: top center;
  width: 750rpx;
  height: 220rpx;
  background-size: 100% 100%;
  margin: 20rpx -20rpx 20rpx;
  border-top: 1px solid rgba(0, 0, 0, 0);
  border-bottom: 1px solid rgba(0, 0, 0, 0);
  position: relative;
}
.w-project-backimg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
}
.w-project-wrapper{
  margin-top: 71rpx;
  margin:70rpx 58rpx 0;
  position: relative;
  z-index: 2;
}
.w-project-item{
  width: 180rpx;
  height: 206rpx;
  background:rgba(255,255,255,1);
  border-radius:10px;
  box-shadow:0px 2px 11px 2px rgba(0,0,0,0.16);
  float: left;
  margin-left: 45rpx;
  text-align: center;
}
.w-project .w-project-item:nth-child(1){
  margin-left: 0px
}
.pro-icon{
   margin: auto;
  width: 69rpx;
  height: 61rpx;
  margin-top: 38rpx;
  
}
.pro-icon image{
  border-radius: 10rpx;
}
.pro-title{
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #272727;
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.pro-desc{
  font-size: 18rpx;
  margin-top: 0rpx;
  color: #848282;
   display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.pro-icon image{width: 100%;height: 100%;}

.w-gonggao{
  margin-top: 100rpx;
  width:700rpx;
  height:50rpx;
  background:rgba(245,244,247,1);
  border-radius:22rpx;
  line-height: 50rpx;
}
.gonggao-placeholder{
  font-size: 22rpx;  
  color: #C34343;
  margin:0 10rpx 0 26rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.w-gonggao-icon{
  vertical-align: middle;
  line-height: 100%;
}
.icon-gonggao{
  color: #C34343;
  top: -10rpx;
}
.more-placeholder{
  font-size: 22rpx;
  color: #010101;
  margin: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.placeholder-text{
  font-size: 20rpx;
  color: #494949;
  padding: 0 10rpx;

  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}
.w-gonggao-item{
  color:#494949;
  padding: 0 10rpx;

  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;

  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
}


.w-gonggao-line{
  width: 3rpx;
  height: 36rpx;
  margin-top: 7rpx;
  background:rgb(167, 167, 167);
  margin:7rpx 30rpx 0rpx 30rpx;
}
/* 列表 */
.list-item{
  margin-top: 32rpx;
}
.item-left{
  width: 284rpx;
  height: 194rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.item-left image{
  width: 100%;
  height: 100%;
}
.item-left .placeholder{
  height: 100%;
  width: 100%;
  position: relative;
}
.item-left .placeholder view{
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 37rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
}
.item-right{
  padding-left: 39rpx;
}
.item-right .placeholder{
  height: 100%;
}
.item-title{
  color: #3A3A3A;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.item-desc{
  font-size: 26rpx;
  color: #7C7C7C;
  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
  margin-top: 10rpx;
}
.item-info{
  font-size: 22rpx;
  color: #FF6600;
  margin-top: 8rpx;
}
.item-info view{
  float: left;
  width: 50%;
}
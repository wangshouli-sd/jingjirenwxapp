/* head */
.page-head{
  padding: 20rpx;
}
.head-card{
  height: 304rpx;
  border-radius: 20rpx;
  background: #f6f9fd;
  box-shadow: 0rpx 2rpx 20rpx 0rpx #C7C7C7 ;
  padding: 37rpx 10rpx;
}
.head-card-l{
  width: 250rpx;
  height: 170rpx; 
  border-radius: 20rpx;
  margin-right: 30rpx;
  position: relative;
  margin-top: 20rpx;
}
.card-l-title{
  position: absolute;
  top: 30%;
  left: 10%;
  right: 10%;
  text-align: center;
  font-size: 26rpx;
  color: #474747;
}
.head-card-l image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.head-card-r{

}
.card-r-item{
  font-size: 26rpx;
  color: #525252;
  margin-bottom: 20rpx;

  display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	overflow: hidden;
}

/* body */
.w-body-title{
  font-size: 30rpx;
  color:#525252;
  text-align: center;
  margin-top: 20rpx;
  border-bottom: 1rpx solid#EEEEEE;
}
.w-body-title-line{
  width: 83rpx;
  height: 6rpx;
  background: #7AAFFF;
  position: relative;
  top: 20rpx;
  margin: auto;
}
.w-body-content{
  padding: 20rpx;

}
.w-progress-wrapper{
  padding-left: 100rpx;
  margin-top: 80rpx;
}

.progress-right-item{
  padding: 35rpx 0;
  position: relative;
  left: -24rpx;
  position: relative;
}
.progress-item-line{
  position: absolute;
  width: 4rpx;
  height: 50%;
  left: 20rpx;
  background: #DDDDDD;
}
.progress-item-line-t{ top: 0rpx;}
.progress-item-line-b{ bottom: 0rpx;}
.item-icon{
  margin-right: 110rpx;
  position: relative;
  z-index: 2;
}
.item-icon view{
  width: 44rpx;
  height: 44rpx;
  background: #DDDDDD;
  border-radius: 50%;
}
.item-icon view.symbol{
  padding: 5rpx;
  color: white;
  font-size: 30rpx;
  line-height: 20rpx;
  text-align: center;
  font-weight: bolder;
}
.item-title{
  font-size: 30rpx;
  color: #282828;
}
.item-time{
  font-size: 20rpx;
  color: #A4A4A4;
  text-align: right;
}
.aa view{
  transform: scale(1.6)
}

.w-progress-right .progress-right-item:last-child .progress-item-line-b,
.w-progress-right .progress-right-item:nth-child(1) .progress-item-line-t{
  display: none;
}
.item-complete .item-icon view,
.item-complete .progress-item-line-t,
.item-complete .progress-item-line-b{
  background: #418CE2;
}

.statefinish{
  color: #67C23A
}
.stateongoing{
  color: #E6A23C
}












